    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>Advent.Ornaments</PackageId>
    <Version>0.1.0</Version>
    <Authors>Leif Walker-Grant</Authors>
    <Company>Leif Walker-Grant</Company>
    <Product>Ornaments â€” An Advent of Code SDK</Product>
